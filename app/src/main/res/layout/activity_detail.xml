<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/dtl_img_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bee_icon" />

    <TextView
        android:id="@+id/dtl_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Bee"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/dtl_img_icon"
        app:layout_constraintTop_toTopOf="@+id/dtl_img_icon" />

    <TextView
        android:id="@+id/dtl_txt_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sting like a bee"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/dtl_img_icon"
        app:layout_constraintStart_toStartOf="@+id/dtl_txt_title" />

    <ImageView
        android:id="@+id/dtl_img_heart"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/dtl_img_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dtl_img_icon"
        app:srcCompat="@drawable/ic_blank_heart" />

</androidx.constraintlayout.widget.ConstraintLayout>